<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/fifteen"
    android:layout_marginVertical="@dimen/eight"
    android:layout_height="@dimen/two_hundred"
    app:cardElevation="@dimen/four">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_superhero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:layout_gravity="bottom"
            android:background="@color/banner_superhero_name">

            <TextView
                android:id="@+id/tv_name_super_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                tools:text="@string/tv_superhero_name" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>